<% unless ENV.fetch("OCTREE_FLAG", "").blank? %>
<div style="position: fixed; background: red; transform: rotate(-3deg); padding: 8px; display: bloc; top: 0; left: 0; color: white; font-size: 20px">
  <%= ENV.fetch("OCTREE_FLAG") %>
</div>
<% end %>
<div class="mini-footer">
  <div class="row">
    <div class="decidim-logo">
      <a rel="noopener" rel="decidim" href="https://decidim.org/" target="_blank">
        <%= image_tag("decidim/decidim-logo-mobile--inv.svg", alt: "Decidim Logo" ) %>
      </a>
    </div>
    <a rel="noopener" rel="license" class="cc-badge"
       href="http://creativecommons.org/licenses/by-sa/4.0/"
       target="_blank">
      <%= image_tag("decidim/cc-by-sa--inv.svg", alt: "Creative Commons License" ) %>
    </a>
    <div class="mf-text">
      <%= t("layouts.decidim.footer.made_with_open_source").html_safe %>
    </div>
  </div>
</div>
